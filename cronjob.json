{
  "apiVersion": "batch/v1beta1",
  "kind": "CronJob",
  "metadata": {
    "name": "nginx-cronjob-demo"
  },
  "spec": {
    "schedule": "* */1 * * *",
    "jobTemplate": {
      "spec": {
        "template": {
          "spec": {
            "containers": [
              {
                "name": "nginx-cronjob-demo",
                "image": "nginx:1.7.9"
              }
            ],
            "restartPolicy": "OnFailure"
          }
        }
      }
    }
  }
}